@{
    ViewData["Title"] = "Home";
}

<div class="container">
    <div class="row shadow rounded">
        <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6">
            <div id="carouselExample" class="carousel slide shadow rounded" data-bs-slide="carousel">
                <div class="carousel-inner h-100">
                    <div class="carousel-item active h-100">
                        <img src="\Images\carousel\Sweet&&Spicy Karaage.jpg" class="d-block w-100 h-100" alt="Recipes">
                    </div>
                    <div class="carousel-item h-100">
                        <img src="\Images\carousel\Shoyu Ramen.jpg" class="d-block w-100 h-100" alt="Recipes">
                    </div>
                    <div class="carousel-item h-100">
                        <img src="\Images\carousel\Teriyakii Chicken Pizza.jpg" class="d-block w-100 h-100" alt="Recipes">
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
        <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6">
            <div class="mb-3">
                <h2 style="color:hotpink;font-size:1.5em;font-family: 'Lobster', cursive;">
                    Get This <span class="text-success">
                        Food
                    </span> From <span class="text-success">Our Restaurant.</span>
                </h2>
            </div>
            <div class="mb-1 p-3">
                <span><i class="fa-solid fa-seedling text-success mx-2 fs-4"></i></span>
                <span class="fs-5" text-dark style="font-family: 'Lobster', cursive;">Freshy Foods</span>
            </div>
            <div class="mb-1 p-3">
                <span><i class="fa-solid fa-wheat-awn text-success mx-2 fs-4"></i></span>
                <span class="fs-5" text-dark style="font-family: 'Lobster', cursive;">Healthy Foods</span>
            </div>
            <div class="mb-1 p-3">
                <span><i class="fa-solid fa-person-biking text-success mx-2 fs-4"></i></span>
                <span class="fs-5" text-dark style="font-family: 'Lobster', cursive;">Fast Delivery</span>
            </div>
            <p class="py-2" style="font-family: 'Lobster', cursive;font-size:1.5em;">Within 30 minutes lol...</p>
        </div>
    </div>
    <div class="row">
        <div class="col-12 mb-3">
            <h2 class="text-dark" style="font-family: 'Lobster', cursive;">Today's Special</h2>
            <div id="todaySpecial" class="row">
                <div class="col-sm-4 col-md-4 col-lg-4 col-xl-4">
                    <div class="card dishCard">
                        <img class="card-img-top h-100"
                        src="\ImageItems\Katsu-Curry-Japanese-Curry-with-Tonkatsu-Nuggets-and-Fried-Egg.jpg" alt="Dish" />
                        <div class="card-body">
                            <p class="card-title" style="font-family: 'Lobster', cursive; font-size:1em">Tonkatsu Fried Egg</p>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4 col-md-4 col-lg-4 col-xl-4">
                    <div class="card dishCard">
                        <img class="card-img-top h-100"
                             src="\ImageItems\Udon-Noodle-Stir-Fry.jpg" alt="Dish"/>
                        <div class="card-body">
                            <p class="card-title" style="font-family: 'Lobster', cursive; font-size:1em">Udon Noodle Stir Fry</p>
                        </div>
                    </div>
            </div>
                <div class="col-sm-4 col-md-4 col-lg-4 col-xl-4">
                    <div class="card dishCard">
                        <img class="card-img-top h-100"
                             src="\ImageItems\Teriyaki Chicken sushi.jpg" alt="Dish" />
                        <div class="card-body">
                            <p class="card-title" style="font-family: 'Lobster', cursive; font-size:1em">Teriyaki Chicken Sushi</p>
                        </div>
                    </div>
        </div>
    </div>
</div>
