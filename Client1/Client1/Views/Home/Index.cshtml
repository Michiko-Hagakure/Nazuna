@{
    ViewData["Title"] = "FORM";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style.css">
    <script type="text/javascript" src="~/js/site.js"></script>
    <title>Login</title>
</head>
<body>
    <section>
        <div class="form-container">
            <h1 style="text-transform: uppercase;font-size: 2em;text-align: center;margin-bottom: 2em;color: black;font-family:'Poppins'sans-serif;">Sign In</h1>
            <form action="#">
                <div class="control">
                    <label for="username" style="color:black;font-family:'Poppins',sans-serif;font-size:20px;">Username:</label>
                    <input type="text" name="username" id="username" placeholder="Enter Username" required>
                </div>
                <div class="control">
                    <label for="password" style="color:black;font-family:'Poppins',sans-serif;font-size:20px;">Password:</label>
                    <input type="password" name="password" id="password" placeholder="Enter Password" required>
                </div>
                <span style="color:black;font-family:'Poppins',sans-serif;font-size:15px;"><input type="checkbox">Remember me</span>
                <div class="control">
                    <input type="submit" value="Login">
                </div>
                <div class="forgot">
                    <a href="#" style="color:black;font-family:'Poppins',sans-serif;font-size:20px;">Forgot Password?</a>
                    <span style="float:right;color:black;font-family:'Poppins',sans-serif;font-size:20px;"><a href="#" style="color:black;">Sign Up</a></span>
                </div>
            </form>
        </div>
    </section>
</body>
</html>